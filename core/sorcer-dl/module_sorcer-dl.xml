<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sorcer-dl" default="compile.module.sorcer-dl">
  <dirname property="module.sorcer-dl.basedir" file="${ant.file.module_sorcer-dl}"/>
  
  <property name="module.jdk.home.sorcer-dl" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sorcer-dl" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sorcer-dl" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sorcer-dl" value="-encoding windows-1250 -source 8 ${compiler.args}"/>
  
  <property name="sorcer-dl.output.dir" value="${module.sorcer-dl.basedir}/build/classes/main"/>
  <property name="sorcer-dl.testoutput.dir" value="${module.sorcer-dl.basedir}/build/classes/test"/>
  
  <path id="sorcer-dl.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sorcer-dl.module.production.classpath">
    <path refid="${module.jdk.classpath.sorcer-dl}"/>
    <path refid="library.gradle:_net.jini:jsk-platform:2.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-api:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-classic:1.1.3.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-resources:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini.lookup:serviceui:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-dl:2.2.2.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
  </path>
  
  <path id="sorcer-dl.runtime.production.module.classpath">
    <pathelement location="${sorcer-dl.output.dir}"/>
    <path refid="library.gradle:_net.jini:jsk-platform:2.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-api:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-classic:1.1.3.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-resources:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini.lookup:serviceui:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-dl:2.2.2.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
  </path>
  
  <path id="sorcer-dl.module.classpath">
    <path refid="${module.jdk.classpath.sorcer-dl}"/>
    <pathelement location="${sorcer-dl.output.dir}"/>
    <path refid="library.gradle:_net.jini:jsk-platform:2.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-api:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-classic:1.1.3.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-resources:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini.lookup:serviceui:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-dl:2.2.2.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
  </path>
  
  <path id="sorcer-dl.runtime.module.classpath">
    <pathelement location="${sorcer-dl.testoutput.dir}"/>
    <pathelement location="${sorcer-dl.output.dir}"/>
    <path refid="library.gradle:_net.jini:jsk-platform:2.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-api:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-classic:1.1.3.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-resources:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini.lookup:serviceui:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-dl:2.2.2.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.sorcer-dl">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sorcer-dl">
    <patternset refid="excluded.from.module.sorcer-dl"/>
  </patternset>
  
  <path id="sorcer-dl.module.sourcepath">
    <dirset dir="${module.sorcer-dl.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sorcer-dl" depends="compile.module.sorcer-dl.production,compile.module.sorcer-dl.tests" description="Compile module sorcer-dl"/>
  
  <target name="compile.module.sorcer-dl.production" depends="register.custom.compilers" description="Compile module sorcer-dl; production classes">
    <mkdir dir="${sorcer-dl.output.dir}"/>
    <javac2 destdir="${sorcer-dl.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sorcer-dl}/javac">
      <compilerarg line="${compiler.args.sorcer-dl}"/>
      <bootclasspath refid="sorcer-dl.module.bootclasspath"/>
      <classpath refid="sorcer-dl.module.production.classpath"/>
      <src refid="sorcer-dl.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sorcer-dl"/>
    </javac2>
    
    <copy todir="${sorcer-dl.output.dir}">
      <fileset dir="${module.sorcer-dl.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.sorcer-dl.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sorcer-dl.tests" depends="register.custom.compilers,compile.module.sorcer-dl.production" description="compile module sorcer-dl; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sorcer-dl" description="cleanup module">
    <delete dir="${sorcer-dl.output.dir}"/>
    <delete dir="${sorcer-dl.testoutput.dir}"/>
  </target>
</project>
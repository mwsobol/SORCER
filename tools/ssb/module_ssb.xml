  <patternset id="excluded.from.module.ssb">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ssb">
    <patternset refid="excluded.from.module.ssb"/>
  </patternset>
  
  <path id="ssb.module.sourcepath">
    <dirset dir="${module.ssb.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ssb" depends="compile.module.ssb.production,compile.module.ssb.tests" description="Compile module ssb"/>
  
  <target name="compile.module.ssb.production" depends="register.custom.compilers,compile.module.sorcer-platform" description="Compile module ssb; production classes">
    <mkdir dir="${ssb.output.dir}"/>
    <javac2 destdir="${ssb.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ssb}/javac">
      <compilerarg line="${compiler.args.ssb}"/>
      <bootclasspath refid="ssb.module.bootclasspath"/>
      <classpath refid="ssb.module.production.classpath"/>
      <src refid="ssb.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ssb"/>
    </javac2>
    
    <copy todir="${ssb.output.dir}">
      <fileset dir="${module.ssb.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.ssb.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ssb.tests" depends="register.custom.compilers,compile.module.ssb.production" description="compile module ssb; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ssb" description="cleanup module">
    <delete dir="${ssb.output.dir}"/>
    <delete dir="${ssb.testoutput.dir}"/>
  </target>

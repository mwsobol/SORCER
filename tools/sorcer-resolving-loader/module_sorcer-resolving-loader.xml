  </path>
  
  <path id="sorcer-resolving-loader.module.production.classpath">
    <path refid="${module.jdk.classpath.sorcer-resolving-loader}"/>
    <path refid="library.gradle:_org.rioproject:rio-platform:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
  </path>
  
  <path id="sorcer-resolving-loader.runtime.production.module.classpath">
    <pathelement location="${sorcer-resolving-loader.output.dir}"/>
    <path refid="library.gradle:_org.rioproject:rio-platform:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
  </path>
  
  <path id="sorcer-resolving-loader.module.classpath">
    <path refid="${module.jdk.classpath.sorcer-resolving-loader}"/>
    <pathelement location="${sorcer-resolving-loader.output.dir}"/>
    <path refid="library.gradle:_org.rioproject:rio-platform:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
  </path>
  
  <path id="sorcer-resolving-loader.runtime.module.classpath">
    <pathelement location="${sorcer-resolving-loader.testoutput.dir}"/>
    <pathelement location="${sorcer-resolving-loader.output.dir}"/>
    <path refid="library.gradle:_org.rioproject:rio-platform:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.sorcer-resolving-loader">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sorcer-resolving-loader">
    <patternset refid="excluded.from.module.sorcer-resolving-loader"/>
  </patternset>
  
  <path id="sorcer-resolving-loader.module.sourcepath">
    <dirset dir="${module.sorcer-resolving-loader.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sorcer-resolving-loader" depends="compile.module.sorcer-resolving-loader.production,compile.module.sorcer-resolving-loader.tests" description="Compile module sorcer-resolving-loader"/>
  
  <target name="compile.module.sorcer-resolving-loader.production" depends="register.custom.compilers" description="Compile module sorcer-resolving-loader; production classes">
    <mkdir dir="${sorcer-resolving-loader.output.dir}"/>
    <javac2 destdir="${sorcer-resolving-loader.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sorcer-resolving-loader}/javac">

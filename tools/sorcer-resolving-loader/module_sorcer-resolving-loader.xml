<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sorcer-resolving-loader" default="compile.module.sorcer-resolving-loader">
  <dirname property="module.sorcer-resolving-loader.basedir" file="${ant.file.module_sorcer-resolving-loader}"/>
  
  <property name="module.jdk.home.sorcer-resolving-loader" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sorcer-resolving-loader" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sorcer-resolving-loader" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sorcer-resolving-loader" value="-encoding windows-1250 -source 8 ${compiler.args}"/>
  
  <property name="sorcer-resolving-loader.output.dir" value="${module.sorcer-resolving-loader.basedir}/build/classes/main"/>
  <property name="sorcer-resolving-loader.testoutput.dir" value="${module.sorcer-resolving-loader.basedir}/build/classes/test"/>
  
  <path id="sorcer-resolving-loader.module.bootclasspath">

      <bootclasspath refid="sorcer-resolving-loader.module.bootclasspath"/>
      <classpath refid="sorcer-resolving-loader.module.production.classpath"/>
      <src refid="sorcer-resolving-loader.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sorcer-resolving-loader"/>
    </javac2>
    
    <copy todir="${sorcer-resolving-loader.output.dir}">
      <fileset dir="${module.sorcer-resolving-loader.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.sorcer-resolving-loader.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sorcer-resolving-loader.tests" depends="register.custom.compilers,compile.module.sorcer-resolving-loader.production" description="compile module sorcer-resolving-loader; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sorcer-resolving-loader" description="cleanup module">
    <delete dir="${sorcer-resolving-loader.output.dir}"/>
    <delete dir="${sorcer-resolving-loader.testoutput.dir}"/>
  </target>
</project>
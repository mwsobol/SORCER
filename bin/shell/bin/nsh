#!/bin/sh

##############################################################################
##                                                                          ##
##  SORCER Network Shell script for UN*X                                            ##
##                                                                          ##
##############################################################################

IGRID_APP_NAME=ExertionShell

# resolve links - $0 may be a soft-link
PRG="$0"

while [ -h "$PRG" ] ; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`/"$link"
    fi
done

DIRNAME=`dirname "$PRG"`

. "$DIRNAME/startShell"

startShell sorcer.tools.shell.NetworkShell "$@"


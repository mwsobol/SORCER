<?xml version="1.0"?>

<project name="bliz service" default="blitz" basedir="">

	<import file="../../common-run.xml" />

	<target name="blitz">
		<java jar="${jini.lib}/start.jar" fork="yes">
			<arg value="../configs/start-blitz.config" />
			<sysproperty key="iGrid.home" value="${iGrid.home}" />
			<sysproperty key="rio.home" value="${env.RIO_HOME}" />
			<sysproperty key="java.rmi.server.useCodebaseOnly" value="false" />
			<sysproperty key="provider.webster.url" value="${provider.webster.url}/" />
			<sysproperty key="java.security.policy" value="../policy/blitz.policy" />
			<sysproperty key="java.util.logging.config.file" value="${iGrid.home}/configs/sorcer.logging" />
			<sysproperty key="sorcer.env.file" value="${iGrid.home}/configs/sorcer.env" />
			<jvmarg value="-Xms128m"/>
			<jvmarg value="-Xmx2g"/>	
		</java>
	</target>

</project>

    <patternset refid="excluded.from.module.sos-shell"/>
  </patternset>
  
  <path id="sos-shell.module.sourcepath">
    <dirset dir="${module.sos-shell.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sos-shell" depends="compile.module.sos-shell.production,compile.module.sos-shell.tests" description="Compile module sos-shell"/>
  
  <target name="compile.module.sos-shell.production" depends="register.custom.compilers,compile.module.webster,compile.module.sorcer-platform" description="Compile module sos-shell; production classes">
    <mkdir dir="${sos-shell.output.dir}"/>
    <javac2 destdir="${sos-shell.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sos-shell}/javac">
      <compilerarg line="${compiler.args.sos-shell}"/>
      <bootclasspath refid="sos-shell.module.bootclasspath"/>
      <classpath refid="sos-shell.module.production.classpath"/>
      <src refid="sos-shell.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sos-shell"/>
    </javac2>
    
    <copy todir="${sos-shell.output.dir}">
      <fileset dir="${module.sos-shell.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sos-shell.tests" depends="register.custom.compilers,compile.module.sos-shell.production" description="compile module sos-shell; test classes" unless="skip.tests"/>
  

    <pathelement location="${sos-db-prv.output.dir}"/>
  </path>
  
  <path id="worker.runtime.production.module.classpath">
    <pathelement location="${worker.output.dir}"/>
    <path refid="sorcer-platform.runtime.production.module.classpath"/>
    <path refid="sorcer-lib.runtime.production.module.classpath"/>
    <path refid="sos-db-prv.runtime.production.module.classpath"/>
  </path>
  
  <path id="worker.module.classpath">
    <path refid="${module.jdk.classpath.worker}"/>

    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
    <pathelement location="${webster.testoutput.dir}"/>
    <pathelement location="${webster.output.dir}"/>
    <path refid="library.gradle:_org.rioproject:rio-platform:5.2.2.classpath"/>
    <path refid="library.gradle:_org.apache.river:start:2.2.2.classpath"/>
    <pathelement location="${sorcer-resolving-loader.testoutput.dir}"/>
    <pathelement location="${sorcer-resolving-loader.output.dir}"/>
    <pathelement location="C:/Program Files/Java/jdk1.8.0_40/lib/tools.jar"/>
    <path refid="library.gradle:_net.jini:jsk-lib:2.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-lib:5.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject.monitor:monitor-api:5.2.2.classpath"/>

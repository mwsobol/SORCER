  </path>
  
  <path id="worker.runtime.module.classpath">
    <pathelement location="${worker.testoutput.dir}"/>
    <pathelement location="${worker.output.dir}"/>
    <path refid="sorcer-platform.runtime.module.classpath"/>
    <path refid="sorcer-lib.runtime.module.classpath"/>
    <path refid="sos-db-prv.runtime.module.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-classic:1.1.3.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.worker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.worker">
    <patternset refid="excluded.from.module.worker"/>
  </patternset>
  
  <path id="worker.module.sourcepath">
    <dirset dir="${module.worker.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="worker.module.test.sourcepath">
    <dirset dir="${module.worker.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.worker" depends="compile.module.worker.production,compile.module.worker.tests" description="Compile module worker"/>
  
  <target name="compile.module.worker.production" depends="register.custom.compilers,compile.module.sorcer-platform,compile.module.sorcer-lib,compile.module.sos-db-prv" description="Compile module worker; production classes">
    <mkdir dir="${worker.output.dir}"/>
    <javac2 destdir="${worker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.worker}/javac">
      <compilerarg line="${compiler.args.worker}"/>
      <bootclasspath refid="worker.module.bootclasspath"/>
      <classpath refid="worker.module.production.classpath"/>
      <src refid="worker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.worker"/>
    </javac2>
    
    <copy todir="${worker.output.dir}">
      <fileset dir="${module.worker.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.worker.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.worker.tests" depends="register.custom.compilers,compile.module.worker.production" description="compile module worker; test classes" unless="skip.tests">
    <mkdir dir="${worker.testoutput.dir}"/>
    <javac2 destdir="${worker.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.worker}/javac">
      <compilerarg line="${compiler.args.worker}"/>
      <bootclasspath refid="worker.module.bootclasspath"/>
      <classpath refid="worker.module.classpath"/>
      <src refid="worker.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.worker"/>
    </javac2>
    
    <copy todir="${worker.testoutput.dir}">
      <fileset dir="${module.worker.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.worker" description="cleanup module">
    <delete dir="${worker.output.dir}"/>
    <delete dir="${worker.testoutput.dir}"/>
  </target>
</project>
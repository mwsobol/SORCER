<?xml version="1.0" encoding="UTF-8"?>
<project name="module_greeter" default="compile.module.greeter">
  <dirname property="module.greeter.basedir" file="${ant.file.module_greeter}"/>
  
  <property name="module.jdk.home.greeter" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.greeter" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.greeter" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.greeter" value="-encoding windows-1250 -source 8 ${compiler.args}"/>
  
  <property name="greeter.output.dir" value="${module.greeter.basedir}/build/classes/main"/>
  <property name="greeter.testoutput.dir" value="${module.greeter.basedir}/build/classes/test"/>
  
  <path id="greeter.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="greeter.module.production.classpath">
    <path refid="${module.jdk.classpath.greeter}"/>
  </path>
  
  <path id="greeter.runtime.production.module.classpath">
    <pathelement location="${greeter.output.dir}"/>
  </path>
  
  <path id="greeter.module.classpath">
    <path refid="${module.jdk.classpath.greeter}"/>
    <pathelement location="${greeter.output.dir}"/>
    <pathelement location="${sorcer-platform.testoutput.dir}"/>
    <pathelement location="${sorcer-platform.output.dir}"/>
    <pathelement location="${sorcer-dl.testoutput.dir}"/>
    <pathelement location="${sorcer-dl.output.dir}"/>
    <path refid="library.gradle:_net.jini:jsk-platform:2.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-api:5.2.2.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-classic:1.1.3.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-resources:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini.lookup:serviceui:2.2.2.classpath"/>
    <path refid="library.gradle:_net.jini:jsk-dl:2.2.2.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
    <pathelement location="${webster.testoutput.dir}"/>
    <pathelement location="${webster.output.dir}"/>
    <path refid="library.gradle:_org.rioproject:rio-platform:5.2.2.classpath"/>
    <path refid="library.gradle:_org.apache.river:start:2.2.2.classpath"/>
    <pathelement location="${sorcer-resolving-loader.testoutput.dir}"/>
    <pathelement location="${sorcer-resolving-loader.output.dir}"/>
    <pathelement location="C:/Program Files/Java/jdk1.8.0_40/lib/tools.jar"/>
    <path refid="library.gradle:_net.jini:jsk-lib:2.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-lib:5.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject.monitor:monitor-api:5.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject.cybernode:cybernode-api:5.2.2.classpath"/>
    <path refid="library.gradle:_com.sleepycat:je:5.0.104.classpath"/>
    <path refid="library.gradle:_org.dancres:lockmgr:2.1.7.classpath"/>
    <path refid="library.gradle:_javax.inject:javax.inject:1.classpath"/>
    <path refid="library.gradle:_com.google.guava:guava:16.0.1.classpath"/>
    <path refid="library.gradle:_org.codehaus.plexus:plexus-utils:3.0.15.classpath"/>
    <path refid="library.gradle:_commons-io:commons-io:2.4.classpath"/>
    <path refid="library.gradle:_org.apache.commons:commons-exec:1.3.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-logging-support:5.2.2.classpath"/>
    <path refid="library.gradle:_org.rioproject:rio-proxy:5.2.2.classpath"/>
    <path refid="library.gradle:_org.codehaus.groovy:groovy-all:2.3.8.classpath"/>
    <path refid="library.gradle:_junit:junit:4.12.classpath"/>
    <path refid="library.gradle:_junit-addons:junit-addons:1.4.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.gradle:_xerces:xercesimpl:2.6.2.classpath"/>
    <path refid="library.gradle:_xerces:xmlparserapis:2.6.2.classpath"/>
  </path>
  
  <path id="greeter.runtime.module.classpath">
    <pathelement location="${greeter.testoutput.dir}"/>
    <pathelement location="${greeter.output.dir}"/>
    <path refid="sorcer-platform.runtime.module.classpath"/>
    <path refid="library.gradle:_org.slf4j:slf4j-api:1.7.12.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-classic:1.1.3.classpath"/>
    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.greeter">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.greeter">
    <patternset refid="excluded.from.module.greeter"/>
  </patternset>
  
  <path id="greeter.module.sourcepath">
    <dirset dir="${module.greeter.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="greeter.module.test.sourcepath">
    <dirset dir="${module.greeter.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.greeter" depends="compile.module.greeter.production,compile.module.greeter.tests" description="Compile module greeter"/>
  
  <target name="compile.module.greeter.production" depends="register.custom.compilers,compile.module.sorcer-platform" description="Compile module greeter; production classes">
    <mkdir dir="${greeter.output.dir}"/>
    <javac2 destdir="${greeter.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.greeter}/javac">
      <compilerarg line="${compiler.args.greeter}"/>
      <bootclasspath refid="greeter.module.bootclasspath"/>
      <classpath refid="greeter.module.production.classpath"/>
      <src refid="greeter.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.greeter"/>
    </javac2>
    
    <copy todir="${greeter.output.dir}">
      <fileset dir="${module.greeter.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.greeter.tests" depends="register.custom.compilers,compile.module.greeter.production" description="compile module greeter; test classes" unless="skip.tests">
    <mkdir dir="${greeter.testoutput.dir}"/>
    <javac2 destdir="${greeter.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.greeter}/javac">
      <compilerarg line="${compiler.args.greeter}"/>
      <bootclasspath refid="greeter.module.bootclasspath"/>
      <classpath refid="greeter.module.classpath"/>
      <src refid="greeter.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.greeter"/>
    </javac2>
    
    <copy todir="${greeter.testoutput.dir}">
      <fileset dir="${module.greeter.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.greeter" description="cleanup module">
    <delete dir="${greeter.output.dir}"/>
    <delete dir="${greeter.testoutput.dir}"/>
  </target>
</project>
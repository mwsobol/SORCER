    <path refid="library.gradle:_ch.qos.logback:logback-core:1.1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.sml">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sml">
    <patternset refid="excluded.from.module.sml"/>
  </patternset>
  
  <path id="sml.module.sourcepath">
    <dirset dir="${module.sml.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="sml.module.test.sourcepath">
    <dirset dir="${module.sml.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sml" depends="compile.module.sml.production,compile.module.sml.tests" description="Compile module sml"/>
  
  <target name="compile.module.sml.production" depends="register.custom.compilers,compile.module.sorcer-platform,compile.module.sorcer-lib,compile.module.sos-db-prv" description="Compile module sml; production classes">
    <mkdir dir="${sml.output.dir}"/>
    <javac2 destdir="${sml.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sml}/javac">
      <compilerarg line="${compiler.args.sml}"/>
      <bootclasspath refid="sml.module.bootclasspath"/>
      <classpath refid="sml.module.production.classpath"/>
      <src refid="sml.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sml"/>
    </javac2>
    
    <copy todir="${sml.output.dir}">
      <fileset dir="${module.sml.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sml.tests" depends="register.custom.compilers,compile.module.sml.production" description="compile module sml; test classes" unless="skip.tests">
    <mkdir dir="${sml.testoutput.dir}"/>
    <javac2 destdir="${sml.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sml}/javac">
      <compilerarg line="${compiler.args.sml}"/>
      <bootclasspath refid="sml.module.bootclasspath"/>
      <classpath refid="sml.module.classpath"/>
      <src refid="sml.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.sml"/>
    </javac2>
    
    <copy todir="${sml.testoutput.dir}">
      <fileset dir="${module.sml.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.sml" description="cleanup module">
    <delete dir="${sml.output.dir}"/>
    <delete dir="${sml.testoutput.dir}"/>
  </target>
</project>